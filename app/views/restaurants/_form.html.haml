= form_for(@restaurant) do |f| 
  - if @restaurant.errors.any?
    #error_explanation
      %h2
        = pluralize(@restaurant.errors.count, "error") 
        prohibited this restaurant from being saved:

      %ul
        - @restaurant.errors.full_messages.each do |msg| 
          %li= msg

  .field
    = f.label :name 
    %br
    = f.text_field :name 

  .field
    = f.label :website 
    %br
    = f.text_field :website 
  .field
    = f.label :info 
    %br 
    = f.text_area :info
  .actions
    = f.submit
