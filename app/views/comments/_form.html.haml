- if cannot? :create, Restaurant
  =render :partial => 'shared/unauthorized', :locals => {:error_message => t('comments.login')}
  
= form_for([restaurant, comment], :remote => true) do |f|
  %h3=t("comments.add")

  - if comment.errors.any?
    #error_explanation
      - comment.errors.full_messages.each do |msg|
        %li=msg
  .field
    = f.text_area :body
  .actions
    =f.submit :class => 'button'
